<%= image_tag(@user.image.small)%><br>
<%= @user.full_name %>
<%= link_to 'Edit profile', edit_user_registration_path %>
<div hidden id="is_current_user_profile"><%= @is_current_user_profile %></div>
<br>
<br>

<% @events.each do |event| %>
  <article id="<%= event.id %>">
    <% if event.creator != @user %>
      <%= link_to event.creator.full_name, profile_path(event.creator) %>
    <%end%>
    <br>
    <%= image_tag(event.image.small)%><br>
    <%= event.details %>
    <br>
    <%= event.users.collect { |user| user.full_name } %>
    <br>
    <%= event.where %> | <%= event.friendly_date %> at <%= event.friendly_hour %>
    <br>
    <% if user_signed_in? && event.creator != current_user %>
      <span class="join_event"><%= event.going_or_join %></span>
    <% end %>
    <br>
    <br>
  </article>

<% end %>
