<%= @user.full_name %>
<%= link_to 'Edit profile', edit_user_registration_path %>

<br>
<br>

<% @events.each do |event| %>
  <% if event.creator != @user %>
    <%= event.creator.full_name %>
  <%end%>
  <br>
  <%= image_tag(event.image.small)%><br>
  <%= event.details %>
  <br>
  <%= event.users.collect { |user| user.full_name } %>
  <br>
  <%= event.where %> | <%= event.friendly_date %> at <%= event.friendly_hour %>
  <% if user_signed_in?%>
    <%= button_to event.tag, join_event_path(event), method: :post %>
  <% end %>
  <br>
  <br>
<% end %>
