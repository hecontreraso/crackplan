<%= form_for(@event, remote: true) do |f| %>
  <% if @event.errors.any? %>
    <%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:

    <% @event.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>

  <%= f.text_area :details, placeholder: 'Plan details...' %>
  <br>
  <%= f.text_field :where, placeholder: 'Where? (Add a place)' %>
  <br>
  <%= f.date_field(:date, min: Date.today) %>
  <br>
  <%= f.text_field :time, id: "event_time", placeholder: 'Now add a time!' %>
  <br>
  <%= f.file_field :image %>
  <%= token_tag form_authenticity_token %>
  <br>
  <%= f.submit "Create" %>
  <br>
  <br>
<% end %>
