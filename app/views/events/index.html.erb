<p id="notice"><%= notice %></p>

<% if user_signed_in?%>
  <h1>New Event</h1>
  <%= render 'form' %>
<% end %>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <%= event.time_created %>
        <br>
        <%= event.creator_name %>
        <br>
        <%= event.details %>
        <br>
        <%= event.users.collect { |user| user.full_name } %>
        <br>
        <%= event.where %>
        <br>
        <%= event.date %>
        <br>
        <%= event.get_time %>
        <br>
        <% if user_signed_in?%>
          <%= link_to event.tag, join_event_path(event), method: :post %>
        <% end %>
      </tr>
      <br>
    <% end %>
  </tbody>
</table>
